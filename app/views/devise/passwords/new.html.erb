<div class="row">
<div class="span12">
<h1>Forgot your password?</h1><hr>
</div>
</div>

<div class="row">
<div class="span6">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-inline"}) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :placeholder => "email" %>

  <%= f.submit "Send me reset password instructions", :class => "btn btn-primary" %>
<% end %>
</div>
</div>