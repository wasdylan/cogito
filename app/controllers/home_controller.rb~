class HomeController < ApplicationController
  def index
    @users = User.all
  end

	def stream
		@feed_items = current_user.feed
		
		@popular = Post.paginate(
        									  :select => "posts.*, count(*) as agree_total", 
         									  :joins => joins, 
         									  :conditions=> conditions, 
         									  :group => "agrees.post_id", 
         									  :order => "agree_total DESC")
	end
end
